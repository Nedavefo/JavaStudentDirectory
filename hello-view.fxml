<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.example.lab2.StudentController">
  <TextField fx:id="idField" layoutX="89.0" layoutY="14.0" promptText="Student ID" />
  <TextField fx:id="nameField" layoutX="89.0" layoutY="40.0" promptText="Name" />
  <TextField fx:id="majorField" layoutX="89.0" layoutY="66.0" promptText="Major" />
  <Button layoutX="105.0" layoutY="104.0" onAction="#addStudent" text="Add" />
  <Button layoutX="164.0" layoutY="104.0" onAction="#deleteStudent" text="Delete" />
  <TableView fx:id="studentTable" layoutX="25.0" layoutY="148.0" prefHeight="200.0" prefWidth="300.0">
    <columns>
      <TableColumn fx:id="idColumn" text="ID" />
      <TableColumn fx:id="nameColumn" text="Name" />
      <TableColumn fx:id="majorColumn" text="Major" />
    </columns>
  </TableView>
</AnchorPane>
